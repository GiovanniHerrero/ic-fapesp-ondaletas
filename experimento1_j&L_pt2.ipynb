import numpy as np
import matplotlib.pyplot as plt
from scipy.stats import beta, chi2
from sklearn.decomposition import PCA
import pywt
import ipywidgets as widgets
from IPython.display import display, clear_output
# --------------------------------------------------------------------
# 1. PARÂMETROS GERAIS
# --------------------------------------------------------------------
n = 1024
p = 2048
sigma = 1.0
norm_rho = 10.0
wavelet_name = 'sym8'
mode = 'periodization'        
w = 0.995                      

# --------------------------------------------------------------------
# 2. PREPARAÇÃO DO SINAL VERDADEIRO (RHO)
# --------------------------------------------------------------------
t = np.linspace(0, 1, p)
beta1 = beta.pdf(t, 1500, 3000)
beta2 = beta.pdf(t, 1200, 900)
beta3 = beta.pdf(t, 600, 160)
f_raw = 0.7 * beta1 + 0.5 * beta2 + 0.5 * beta3
rho_true = f_raw / np.linalg.norm(f_raw) * norm_rho

# --------------------------------------------------------------------
# 3. FUNÇÃO PRINCIPAL DO ALGORITMO
# --------------------------------------------------------------------
def processar_aspca(seed, level, multiplicador_delta):
    """
    Executa o pipeline completo do ASPCA:
    Wavelet -> Seleção -> PCA Reduzido -> Thresholding -> Reconstrução
    Retorna: observação ruidosa, estimativas sem e com threshold, 
             k_adaptive, k_final, delta, sigma_hat_sq.
    """
    np.random.seed(seed)
    
    # A. Geração dos dados (modelo (2))
    v = np.random.normal(0, 1, size=(n, 1))
    Z = np.random.normal(0, 1, size=(n, p))
    X = v @ rho_true.reshape(1, -1) + sigma * Z

    # B. Transformada Wavelet
    coeffs_first = pywt.wavedec(X[0], wavelet_name, level=level, mode=mode)
    slices = pywt.coeffs_to_array(coeffs_first)[1]
    p_coef = sum(c.size for c in coeffs_first)

    X_wavelet = np.zeros((n, p_coef))
    for i in range(n):
        c = pywt.wavedec(X[i], wavelet_name, level=level, mode=mode)
        arr, _ = pywt.coeffs_to_array(c)
        X_wavelet[i] = arr

    # C. Seleção de variáveis (Passo 2)
    variances = np.var(X_wavelet, axis=0, ddof=1)
    sigma_hat_sq = np.median(variances)          # Eq. (14)
    sigma_hat = np.sqrt(sigma_hat_sq)

    sorted_indices = np.argsort(variances)[::-1]
    sorted_vars = variances[sorted_indices]

    # Baseline ordenado 
    ranks = np.arange(1, p_coef + 1)
    q_vals = (p_coef - ranks + 1) / (p_coef + 1)          
    baseline = (sigma_hat_sq / (n - 1)) * chi2.ppf(q_vals, df=n - 1)

    eta_sq = np.maximum(sorted_vars - baseline, 0)
    total_excess = np.sum(eta_sq)
    cumulative_excess = np.cumsum(eta_sq)

    # Número de coeficientes selecionados 
    k = np.searchsorted(cumulative_excess, w * total_excess) + 1
    selected_indices = sorted_indices[:k]

    # D. PCA Reduzido (Passo 3)
    pca = PCA(n_components=1)
    pca.fit(X_wavelet[:, selected_indices])
    rho_reduced = pca.components_[0]

    rho_hat_w = np.zeros(p_coef)
    rho_hat_w[selected_indices] = rho_reduced

    # Ajuste de sinal 
    coeffs_rho_lvl = pywt.wavedec(rho_true, wavelet_name, level=level, mode=mode)
    rho_true_w_lvl, _ = pywt.coeffs_to_array(coeffs_rho_lvl)
    if np.dot(rho_hat_w, rho_true_w_lvl) < 0:
        rho_hat_w = -rho_hat_w
        rho_reduced = -rho_reduced

    # E. Thresholding (Passo 4) – Eqs. (16) e (17)
    sum_diff = np.sum(np.maximum(variances - sigma_hat_sq, 0))
    lower_bound_norm = sigma_hat_sq * np.sqrt(p_coef / n)
    norm_rho_sq_est = max(sum_diff, lower_bound_norm)          # Eq. (17)

    numerador = sigma_hat * np.sqrt(norm_rho_sq_est + sigma_hat_sq)
    denominador = np.sqrt(n) * norm_rho_sq_est
    tau_hat = numerador / denominador                          # Eq. (16)

    delta = multiplicador_delta * tau_hat * np.sqrt(2 * np.log(k))

    rho_hat_w_th = rho_hat_w.copy()
    rho_hat_w_th[np.abs(rho_hat_w_th) < delta] = 0
    k_final = np.count_nonzero(rho_hat_w_th)

    if np.dot(rho_hat_w_th, rho_true_w_lvl) < 0:
        rho_hat_w_th = -rho_hat_w_th

    # F. Reconstrução para o domínio do tempo
    def reconstruct(vec_w):
        c = pywt.array_to_coeffs(vec_w, slices, output_format='wavedec')
        sig = pywt.waverec(c, wavelet_name, mode=mode)
        return sig[:p]

    rho_rec = reconstruct(rho_hat_w)
    rho_rec_th = reconstruct(rho_hat_w_th)

    # Renormalização para ‖ρ‖ = 10 (para visualização)
    if np.linalg.norm(rho_rec) > 1e-6:
        rho_rec = rho_rec * (norm_rho / np.linalg.norm(rho_rec))
    if np.linalg.norm(rho_rec_th) > 1e-6:
        rho_rec_th = rho_rec_th * (norm_rho / np.linalg.norm(rho_rec_th))

    return X[0], rho_rec, rho_rec_th, k, k_final, delta, sigma_hat_sq

# --------------------------------------------------------------------
# 4. PAINEL DE VISUALIZAÇÃO
# --------------------------------------------------------------------
def update_view(seed, level, multiplicador):
    with out:
        clear_output(wait=True)

        X_obs, rho_no_th, rho_th, k_sel, k_fin, delta, sig2 = processar_aspca(seed, level, multiplicador)

        fig, axes = plt.subplots(2, 2, figsize=(14, 9))

        # (a) Sinal verdadeiro
        axes[0, 0].plot(rho_true, 'k', lw=1.5)
        axes[0, 0].set_title(r'(a) Sinal Verdadeiro $\rho$ (Três Picos)')
        axes[0, 0].set_ylim(-0.5, 1.8)
        axes[0, 0].grid(alpha=0.2)

        # (b) Uma observação ruidosa
        axes[0, 1].plot(X_obs, 'gray', lw=0.5)
        axes[0, 1].set_title(f'(b) Uma observação ruidosa (Seed {seed})')
        axes[0, 1].set_ylim(-15, 15)

        # (e) ASPCA – apenas seleção (sem threshold)
        axes[1, 0].plot(rho_no_th, 'k', lw=1)
        axes[1, 0].set_title(f'(e) ASPCA - Apenas Seleção\nk = {k_sel} coeficientes')
        axes[1, 0].set_ylim(-0.5, 1.8)
        axes[1, 0].axhline(0, color='r', ls='--', alpha=0.3)

        # (f) ASPCA – com threshold
        axes[1, 1].plot(rho_th, 'b', lw=1.5)
        axes[1, 1].set_title(f'(f) ASPCA - Final (Threshold)\nδ = {delta:.4f} | k_final = {k_fin}')
        axes[1, 1].set_ylim(-0.5, 1.8)
        axes[1, 1].axhline(0, color='r', ls='--', alpha=0.3)

        plt.tight_layout()
        plt.show()
        globals()['current_fig'] = fig


        # Estatísticas
        error = np.mean((rho_th - rho_true) ** 2)
        print("--- Diagnóstico ---")
        print(f"Estimativa de Ruído (σ²): {sig2:.4f} (real = 1.0)")
        print(f"Erro Quadrático Médio (MSE): {error:.5f}")
        print(f"Coeficientes selecionados (k_adaptive): {k_sel}")
        print(f"Coeficientes após threshold (k_final): {k_fin}")

# --------------------------------------------------------------------
# 5. BOTÕES PARA REGULAR PARÂMETROS DE SEMENTE, NÍVEL DE DECOMPOSIÇÃO E FATOR DE AUMENTO DO LIMIAR
# --------------------------------------------------------------------
seed_slider = widgets.IntSlider(value=10013, min=0, max=20000, description='Seed')
level_slider = widgets.IntSlider(value=6, min=3, max=9, description='Nível Wavelet')
mult_slider = widgets.FloatSlider(value=1.0, min=0.5, max=3.0, step=0.1,
                                   description='Fator do threshold')

out = widgets.Output()
ui = widgets.HBox([seed_slider, level_slider, mult_slider])

widgets.interactive_output(update_view, {
    'seed': seed_slider,
    'level': level_slider,
    'multiplicador': mult_slider
})


display(ui, out)
